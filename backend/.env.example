# Database (Railway will auto-fill this when you add PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/task_dashboard?schema=public"

# JWT - IMPORTANT: Change this to a secure random string in production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="production"

# Frontend URL (for CORS) - comma-separated for multiple origins
# Example: "https://dashboard.byredstone.com,http://localhost:5173"
FRONTEND_URL="https://dashboard.byredstone.com"
